{
  "swagger": "2.0",
  "info": {
    "title": "CloudOS API V1",
    "version": "v1"
  },
  "paths": {
    "/api/system/programs/list": {
      "get": {
        "summary": "Get a list of install programs",
        "tags": [
          "Program"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "return a list of installed programs",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "image_id": {
                        "type": "string"
                      },
                      "icon_path": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  }
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/system/program/{id}": {
      "get": {
        "summary": "Get information about a program",
        "tags": [
          "Program"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "return information about the specified program",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "image_id": {
                      "type": "string"
                    },
                    "icon_path": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "no program found with the specified id",
            "schema": {
              "$ref": "#/definitions/error_response"
            }
          }
        }
      }
    },
    "/api/system/program/install/git": {
      "post": {
        "summary": "install program from git by url",
        "tags": [
          "Program"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "install_params",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "git_url": {
                  "type": "string",
                  "description": "The git url from which the new application will be installed"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "return new program object",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "image_id": {
                      "type": "string"
                    },
                    "icon_path": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "success_response": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "error_response": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}