
<div class="login-page h-100">
  <div class="blue-strip"></div>
  <div class="row content-container">
    <div class="col-xl-9 col-lg-8 col-sm-7">
      <div class="row title-item"><h1>Your</h1></div>
      <div class="row title-item alt"><h1>Open Source</h1></div>
      <div class="row title-item"><h1>Cloud Based</h1></div>
      <div class="row title-item alt"><h1>Operating System</h1></div>
    </div>
    <div class="col-xl-3 col-lg-4 col-sm-5">
      <div class="container-fluid login-credentials-pane">
        <h1 class="login-header">Login</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
          <%= f.submit "Login", class: %w(btn btn-primary)%>
        <% end %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
    </div>
    <div class="footer">
      <h1>Cloud <span class="text-pop">OS</span></h1>
    </div>
  </div>
</div>


